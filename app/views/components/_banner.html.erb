        <div class="banner-card-content" style="background-color: #804000;">
          <h3>View Homes</h3>
        </div>
      <% end %>
      </div>
    <div class="col-sm-3 banner-card" style="background-image: url('https://images.unsplash.com/photo-1535498730771-e735b998cd64?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80')">
      <%= link_to trips_path do %>
        <div class="banner-card-content" style="background-color: #800040;">
          <h3>View Trips</h3>
        </div>
      <% end %>
    </div>
    <div class="col-sm-3 banner-card" style="background-image: url('https://images.unsplash.com/photo-1498484502070-2165cb42d504?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80')">
      <%= link_to activities_path do %>
        <div class="banner-card-content" style="background-color: #006633;">
          <h3>View Activities</h3>
        </div>
      <% end %>
    </div>
  </div>
</div>




