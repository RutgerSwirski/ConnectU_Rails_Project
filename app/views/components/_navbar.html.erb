<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to "ConnectU", root_path, class: 'navbar-brand' %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "View Users", profiles_path, class: 'nav-link' %>
          <%= link_to "View Homes", flats_path, class: 'nav-link' %>
          <%= link_to "Plan Trip", new_trip_path, class: 'nav-link' %>
          <%= link_to "View Trips", trips_path, class: 'nav-link' %>
          <%= link_to "View Activities", activities_path, class: 'nav-link' %>
        </li>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.profile_picture, height: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Profile", my_profile_path, class: "dropdown-item"  %>
            <%= link_to "Add Home", new_flat_path, class: 'dropdown-item' %>
            <%= link_to "Add Activity", new_activity_path, class: 'dropdown-item' %>
            <%= link_to "My Friends", friends_path, class: "dropdown-item"  %>
            <%= link_to "Inbox", messages_path, class: "dropdown-item"  %>
            <%= link_to "My Bookings", orders_path, class: "dropdown-item"  %>
            <%= link_to "My Favourites", favourites_path, class: "dropdown-item"  %>
            <%= link_to "My Hosted", my_hosted_path, class: "dropdown-item"  %>
            <hr>
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "dropdown-item"   %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Login', new_user_session_path, class: 'nav-link'   %>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link'   %>
        </li>
      <% end %>
    </ul>
  </div>
</div>









