<div class="navbar">
  <!-- Logo -->
  <%= link_to "ConnectU", root_path, class: 'connectu' %>

  <!-- Right Navigation -->
  <div class="navbar-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <%= link_to "View Users", profiles_path, class: 'navbar-item navbar-link' %>
      <%= link_to "Add Home", new_flat_path, class: 'navbar-item navbar-link' %>
      <%= link_to "View Homes", flats_path, class: 'navbar-item navbar-link' %>
      <%= link_to "Plan Trip", new_trip_path, class: 'navbar-item navbar-link' %>
      <%= link_to "View Trips", trips_path, class: 'navbar-item navbar-link' %>
      <%= link_to "Add Activity", new_activity_path, class: 'navbar-item navbar-link' %>
      <%= link_to "View Activities", activities_path, class: 'navbar-item navbar-link' %>
      <div class="navbar-item">
        <div class="dropdown">
          <p class="avatar dropdown-toggle" id="navbar-menu" data-toggle="dropdown">
            <%= cl_image_tag current_user.profile_picture, height: 50, width: 50, :style => 'border-radius:50%;background-size:cover;' %>
          </p>
          <ul class="dropdown-menu dropdown-menu-right navbar-dropdown-menu">
            <li><%= link_to "My Profile", my_profile_path %></li>
            <li><%= link_to "My Favourites", favourites_path %></li>
            <li><%= link_to "My Friends", friends_path %></li>
            <li><%= link_to "Inbox", messages_path %></li>
            <li><%= link_to "My Hosted", my_hosted_path %></li>
            <li><%= link_to "My Bookings", orders_path %></li>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete  %></li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to 'Login', new_user_session_path, class: 'navbar-item navbar-link'   %>
      <%= link_to 'Sign Up', new_user_registration_path, class: 'navbar-item navbar-link'   %>
    <% end %>
  </div>
</div>
