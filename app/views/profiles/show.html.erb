<div class="container">
  <div class="row">
    <div class="col-sm-4 profile-image-container">
      <div class="profile-image">
        <%= cl_image_tag @user.profile_picture, height: 200, crop: :fill %>
      </div>
    </div>
    <div class="col-sm-8 profile-about-container">
      <div class="profile-name">
        <h1><%= @user.first_name %> <%= @user.last_name %></h1>
        <h5><%= @user.email %></h5>
        <div class="location">
          <h4><i class="fas fa-map-marker-alt"></i> <%= @user_location.first.data.values[1] %>, <%= @user_location.first.data.values[2] %>, <%= @user_location.first.data.values[3] %></h4>
        </div>
      </div>
      <hr>
      <div class="profile-about">
        <%= @user.description %>
      </div>
    </div>

    <% if @user != current_user %>
      <div class="col-sm-12">
        <hr>
        <h2>Messages</h2>
        <div id="messages">
          <%= render 'messages/show' %>
        </div>
        <%= render 'messages/message_form', user: @user, message: @message %>
      </div>
    <% end %>
  </div>
</div>