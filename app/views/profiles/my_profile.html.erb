<div class="container">
  <div class="row">
    <div class="col-sm-4 profile-image-container">
      <div class="profile-image">
        <%= cl_image_tag current_user.profile_picture, height: 200, crop: :fill, style: 'border-radius:50%;' %>
      </div>
    </div>
    <div class="col-sm-8 profile-about-container">
      <%= link_to "Edit Profile", edit_user_registration_path, class: 'btn btn-primary' %>
      <hr>
      <div class="profile-name">
        <h1><%= current_user.first_name %> <%= current_user.last_name %></h1>
        <h5><%= current_user.email %></h5>
        <div class="location">
          <h4><i class="fas fa-map-marker-alt"></i> <%= @my_location.first.data.values[1] %>, <%= @my_location.first.data.values[2] %>, <%= @my_location.first.data.values[3] %></h4>
        </div>
      </div>
      <hr>
      <div class="profile-about">
        <%= current_user.description %>
      </div>
    </div>
  </div>
</div>