<div class="container">
<h3>Edit Activity</h3>
  <% @activity.activity_photos.where.not(id: nil).each do |photo| %>
    <li data-activity_photo-id="<%= photo.id %>" style="list-style: none">
      <%= cl_image_tag photo.photo, height: 100, crop: :fill %>
      <%= link_to "Delete Image", activity_photo_path(photo), method: :delete, remote: true  %>
    </li>
  <% end %>
  <%= simple_form_for @activity do |f| %>
    <%= f.simple_fields_for :activity_photos do |p| %>
      <%= p.input :photo, label: "Images", as: :file, input_html: { multiple: true } %>
      <%= p.input :photo_cache, as: :hidden %>
    <% end %>
    <%= f.input :name %>
    <%= f.input :date, html5: true %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :address, input_html: { id: 'address_input' } %>
    <%= f.button :submit %>
  <% end %>
</div>

